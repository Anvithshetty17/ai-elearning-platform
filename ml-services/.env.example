# ML Service Environment Configuration
FLASK_ENV=development

# Service Configuration
ML_SERVICE_PORT=5001
BACKEND_API_URL=http://localhost:5000

# Allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# TTS Configuration
DEFAULT_TTS_LANGUAGE=en
DEFAULT_TTS_VOICE=female
MAX_TEXT_LENGTH=10000

# Video Generation Configuration
DEFAULT_VIDEO_RESOLUTION=1280x720
DEFAULT_VIDEO_FPS=24
DEFAULT_BACKGROUND_COLOR=#1a1a2e

# File Upload Limits
MAX_AUDIO_FILE_SIZE=50MB
MAX_VIDEO_FILE_SIZE=100MB

# Processing Configuration
MAX_CONCURRENT_TASKS=5
TASK_CLEANUP_HOURS=24

# Redis Configuration (for future queue implementation)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO