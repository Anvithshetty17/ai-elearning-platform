# Environment Configuration
FLASK_ENV=development
FLASK_PORT=5001
FLASK_SECRET_KEY=your-super-secret-flask-key-change-in-production

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Text-to-Speech API Configuration
TTS_API_KEY=your-elevenlabs-api-key
TTS_API_URL=https://api.elevenlabs.io/v1

# Azure Speech Service (alternative TTS)
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-region

# Video Generation Configuration
VIDEO_WIDTH=1280
VIDEO_HEIGHT=720
VIDEO_FPS=30
VIDEO_BITRATE=2M

# Audio Configuration
AUDIO_SAMPLE_RATE=44100
AUDIO_BITRATE=128k

# Processing Configuration
PROCESSING_TIMEOUT=600
CLEANUP_INTERVAL=3600

# Redis Configuration (for background jobs)
REDIS_URL=redis://localhost:6379/0

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# Google Cloud Configuration (if using Google services)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# OpenAI Configuration (for advanced AI features)
OPENAI_API_KEY=your-openai-api-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/ml-service.log

# Feature Flags
ENABLE_ADVANCED_TTS=true
ENABLE_VIDEO_GENERATION=true
ENABLE_BACKGROUND_PROCESSING=true
ENABLE_MONITORING=false